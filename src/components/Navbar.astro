import { Image } from 'astro:assets';
---

<nav class="sticky top-0 z-50 w-full border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between">
      <!-- Logo -->
      <div class="flex items-center">
        <img
          src="/streamhiblandscapetrnsprant.png"
          alt="StreamHib Logo"
          width="150"
          height="40"
          class="h-8 w-auto"
        />
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <a href="/tutorial" class="text-sm font-medium hover:text-primary transition-colors">
          Tutorial
        </a>
        <a href="#features" class="text-sm font-medium hover:text-primary transition-colors nav-features">
          Features
        </a>
        <a href="#pricing" class="text-sm font-medium hover:text-primary transition-colors nav-pricing">
          Pricing
        </a>
        <a href="#testimonials" class="text-sm font-medium hover:text-primary transition-colors nav-testimonials">
          Testimonials
        </a>
        <a href="#faq" class="text-sm font-medium hover:text-primary transition-colors nav-faq">
          FAQ
        </a>
      </div>

      <!-- Desktop Actions -->
      <div class="hidden md:flex items-center space-x-4">
        <div id="language-switcher-desktop"></div>
        <div id="theme-toggle-desktop"></div>
        <a href="#pricing" class="inline-flex items-center justify-center px-6 py-2 bg-red-500 hover:bg-red-600 text-white font-semibold rounded-md text-sm transition-colors nav-start-now">
          ðŸš€ Start Now
        </a>
      </div>

      <!-- Mobile Actions -->
      <div class="md:hidden flex items-center space-x-2">
        <div id="language-switcher-mobile"></div>
        <div id="theme-toggle-mobile"></div>
        <button id="mobile-menu-button" class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-indigo-500">
          <svg id="menu-icon" class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <svg id="close-icon" class="hidden h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden">
      <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 border-t">
        <a href="/tutorial" class="block px-3 py-2 text-sm font-medium hover:text-primary transition-colors">
          Tutorial
        </a>
        <a href="#features" class="block px-3 py-2 text-sm font-medium hover:text-primary transition-colors nav-features-mobile">
          Features
        </a>
        <a href="#pricing" class="block px-3 py-2 text-sm font-medium hover:text-primary transition-colors nav-pricing-mobile">
          Pricing
        </a>
        <a href="#testimonials" class="block px-3 py-2 text-sm font-medium hover:text-primary transition-colors nav-testimonials-mobile">
          Testimonials
        </a>
        <a href="#faq" class="block px-3 py-2 text-sm font-medium hover:text-primary transition-colors nav-faq-mobile">
          FAQ
        </a>
        <div class="px-3 py-2">
          <a href="#pricing" class="block w-full text-center bg-red-500 hover:bg-red-600 text-white font-semibold py-2 px-4 rounded-md text-sm transition-colors nav-start-now-mobile">
            ðŸš€ Start Now
          </a>
        </div>
      </div>
    </div>
  </div>
</nav>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');

  mobileMenuButton?.addEventListener('click', () => {
    const isHidden = mobileMenu?.classList.contains('hidden');
    
    if (isHidden) {
      mobileMenu?.classList.remove('hidden');
      menuIcon?.classList.add('hidden');
      closeIcon?.classList.remove('hidden');
    } else {
      mobileMenu?.classList.add('hidden');
      menuIcon?.classList.remove('hidden');
      closeIcon?.classList.add('hidden');
    }
  });

  // Update navigation text based on language
  function updateNavText() {
    const language = localStorage.getItem('language') || 'id';
    
    const translations = {
      id: {
        features: 'Fitur',
        pricing: 'Harga',
        testimonials: 'Testimoni',
        faq: 'FAQ',
        startNow: 'ðŸš€ Mulai Sekarang'
      },
      en: {
        features: 'Features',
        pricing: 'Pricing',
        testimonials: 'Testimonials',
        faq: 'FAQ',
        startNow: 'ðŸš€ Start Now'
      }
    };

    const t = translations[language] || translations.id;

    // Update desktop nav
    document.querySelector('.nav-features').textContent = t.features;
    document.querySelector('.nav-pricing').textContent = t.pricing;
    document.querySelector('.nav-testimonials').textContent = t.testimonials;
    document.querySelector('.nav-faq').textContent = t.faq;
    document.querySelector('.nav-start-now').textContent = t.startNow;

    // Update mobile nav
    document.querySelector('.nav-features-mobile').textContent = t.features;
    document.querySelector('.nav-pricing-mobile').textContent = t.pricing;
    document.querySelector('.nav-testimonials-mobile').textContent = t.testimonials;
    document.querySelector('.nav-faq-mobile').textContent = t.faq;
    document.querySelector('.nav-start-now-mobile').textContent = t.startNow;
  }

  // Update on page load
  updateNavText();

  // Listen for language changes
  window.addEventListener('storage', updateNavText);
  
  // Listen for custom language change event
  window.addEventListener('languageChanged', updateNavText);
</script>