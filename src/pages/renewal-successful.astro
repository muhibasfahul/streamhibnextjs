---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Renewal Successful - StreamHib" description="Perpanjangan berhasil">
  <link rel="stylesheet" href="/src/styles/globals.css" />
  
  <Navbar />
  
  <main class="flex items-center justify-center bg-gray-50 dark:bg-background px-4 py-24 sm:py-32">
    <div class="max-w-md w-full mx-auto text-center bg-white dark:bg-card shadow-lg rounded-xl p-8 space-y-6">
      
      <svg class="h-16 w-16 text-blue-500 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      
      <div class="space-y-2">
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white renewal-title">
          Perpanjangan Berhasil!
        </h1>
        <p class="text-gray-600 dark:text-gray-300 renewal-message">
          Terima kasih telah memperpanjang layanan Anda. Mohon setujui kembali Syarat & Ketentuan kami sebelum menghubungi tim untuk konfirmasi.
        </p>
      </div>

      <div class="flex items-center justify-center space-x-2 pt-4">
        <input
          type="checkbox"
          id="terms-agreement"
          class="h-4 w-4 accent-blue-600"
        />
        <label for="terms-agreement" class="text-sm text-gray-600 dark:text-gray-400 checkbox-label">
          Saya telah membaca dan setuju dengan
          <a href="/terms" target="_blank" class="text-blue-600 hover:underline terms-link">
            Syarat dan Ketentuan
          </a>
        </label>
      </div>

      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <button
          id="whatsapp-button"
          disabled
          class="w-full bg-green-500 hover:bg-green-600 text-white font-semibold py-3 px-6 rounded-md disabled:bg-gray-300 disabled:cursor-not-allowed transition-colors flex items-center justify-center"
        >
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
          </svg>
          <span class="whatsapp-text">Hubungi via WhatsApp</span>
        </button>
        <button
          id="telegram-button"
          disabled
          class="w-full bg-blue-500 hover:bg-blue-600 text-white font-semibold py-3 px-6 rounded-md disabled:bg-gray-300 disabled:cursor-not-allowed transition-colors flex items-center justify-center"
        >
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
            <path d="M11.944 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0a12 12 0 0 0-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 0 1 .171.325c.016.093.036.306.02.472-.18 1.898-.962 6.502-1.36 8.627-.168.9-.499 1.201-.82 1.23-.696.065-1.225-.46-1.9-.902-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345-.48.33-.913.49-1.302.48-.428-.008-1.252-.241-1.865-.44-.752-.245-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.83-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635z"/>
          </svg>
          <span class="telegram-text">Hubungi via Telegram</span>
        </button>
      </div>

    </div>
  </main>
  
  <Footer />
</Layout>

<script>
  // Contact links (adjusted for renewal)
  const contactLinks = {
    whatsapp: "https://wa.me/6285722165165?text=Halo%20kak%2C%20saya%20sudah%20memperpanjang%20paket%20di%20StreamHib%2C%20bisa%20segera%20diperbarui%3F",
    telegram: "https://t.me/streamhib"
  };

  // Translations
  const translations = {
    id: {
      title: 'Perpanjangan Berhasil!',
      message: 'Terima kasih telah memperpanjang layanan Anda. Mohon setujui kembali Syarat & Ketentuan kami sebelum menghubungi tim untuk konfirmasi.',
      checkboxLabel: 'Saya telah membaca dan setuju dengan',
      termsLink: 'Syarat dan Ketentuan',
      buttonWhatsApp: 'Hubungi via WhatsApp',
      buttonTelegram: 'Hubungi via Telegram',
    },
    en: {
      title: 'Renewal Successful!',
      message: 'Thank you for renewing your service. Please re-agree to our Terms and Conditions before contacting our team for confirmation.',
      checkboxLabel: 'I have read and agree to the',
      termsLink: 'Terms and Conditions',
      buttonWhatsApp: 'Contact via WhatsApp',
      buttonTelegram: 'Contact via Telegram',
    },
  };

  function updateRenewalContent() {
    const language = localStorage.getItem('language') || 'id';
    const t = translations[language as keyof typeof translations] || translations.id;

    // Update elements
    const titleElement = document.querySelector('.renewal-title');
    const messageElement = document.querySelector('.renewal-message');
    const checkboxLabelElement = document.querySelector('.checkbox-label');
    const termsLinkElement = document.querySelector('.terms-link');
    const whatsappTextElement = document.querySelector('.whatsapp-text');
    const telegramTextElement = document.querySelector('.telegram-text');

    if (titleElement) titleElement.textContent = t.title;
    if (messageElement) messageElement.textContent = t.message;
    if (whatsappTextElement) whatsappTextElement.textContent = t.buttonWhatsApp;
    if (telegramTextElement) telegramTextElement.textContent = t.buttonTelegram;
    if (termsLinkElement) termsLinkElement.textContent = t.termsLink;
    
    if (checkboxLabelElement) {
      checkboxLabelElement.innerHTML = `
        ${t.checkboxLabel}
        <a href="/terms" target="_blank" class="text-blue-600 hover:underline terms-link">
          ${t.termsLink}
        </a>
      `;
    }
  }

  // Checkbox and button functionality
  const checkbox = document.getElementById('terms-agreement');
  const whatsappButton = document.getElementById('whatsapp-button') as HTMLButtonElement;
  const telegramButton = document.getElementById('telegram-button') as HTMLButtonElement;

  if (checkbox && whatsappButton && telegramButton) {
    checkbox.addEventListener('change', (e: Event) => {
      const isChecked = (e.target as HTMLInputElement).checked;
      whatsappButton.disabled = !isChecked;
      telegramButton.disabled = !isChecked;
      
      if (isChecked) {
        whatsappButton.classList.remove('bg-gray-300', 'cursor-not-allowed');
        whatsappButton.classList.add('bg-green-500', 'hover:bg-green-600');
        telegramButton.classList.remove('bg-gray-300', 'cursor-not-allowed');
        telegramButton.classList.add('bg-blue-500', 'hover:bg-blue-600');
      } else {
        whatsappButton.classList.add('bg-gray-300', 'cursor-not-allowed');
        whatsappButton.classList.remove('bg-green-500', 'hover:bg-green-600');
        telegramButton.classList.add('bg-gray-300', 'cursor-not-allowed');
        telegramButton.classList.remove('bg-blue-500', 'hover:bg-blue-600');
      }
    });

    whatsappButton.addEventListener('click', () => {
      if (!whatsappButton.disabled) {
        window.open(contactLinks.whatsapp, '_blank');
      }
    });

    telegramButton.addEventListener('click', () => {
      if (!telegramButton.disabled) {
        window.open(contactLinks.telegram, '_blank');
      }
    });
  }

  // Update on page load
  updateRenewalContent();

  // Listen for language changes
  window.addEventListener('storage', updateRenewalContent);
  window.addEventListener('languageChanged', updateRenewalContent);
</script>